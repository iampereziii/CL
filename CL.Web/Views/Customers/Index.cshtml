@model  List<CL.Domain.Models.Customers.Customer>

<h2></h2>
<h3></h3>

@if (!Model.Equals(null))
{
    int counter = 0;


    <h2>Customers</h2>
    if (Model.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>

                    <th scope="col">Name</th>
                    <th scope="col">Membership Type</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model)
                {
                    <tr>
                        <th scope="row">@counter.ToString()</th>
                        <td> @Html.ActionLink((string)person.Name, "Details", "Customers", new { id = person.Id }, null)</td>

                        <td>@person.MembershipTypeModel.Name</td>
                    </tr>

                    counter++;
                }
            </tbody>
        </table>
    }
    else
    {
        <h3>There are no customers yet!</h3>
    }
}                      